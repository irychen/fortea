{
    "name": "fortea",
    "version": "1.0.5",
    "description": "some tools for js, save your time for a cup of tea",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "author": "wongyichen",
    "homepage": "https://github.com/irychen/fortea",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/irychen/fortea.git"
    },
    "files": [
        "dist/types/index.d.ts",
        "dist/esm/index.js",
        "dist/cjs/index.js"
    ],
    "lint-staged": {
        "src/**/*.{js,ts,tsx}": [
            "prettier --write"
        ]
    },
    "type": "module",
    "scripts": {
        "build:types": "tsc -b ./tsconfig.types.json",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "test": "jest --coverage",
        "build:main": "rollup --config rollup.config.js",
        "clean": "rimraf dist",
        "build": "npm run format && npm run clean && npm run build:types && npm run build:main",
        "prepare": "husky install",
        "publish": "node --no-warnings ./scripts/publish.js"
    },
    "keywords": [
        "base64",
        "delay",
        "isFunc"
    ],
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.23.8",
        "@babel/preset-typescript": "^7.23.3",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.11.14",
        "chalk": "^5.3.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.2",
        "lint-staged": "^15.2.0",
        "prettier": "3.2.4",
        "rimraf": "^5.0.5",
        "rollup": "^4.9.6",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3"
    }
}
